{
  "name": "lesan",
  "version": "1.0.0",
  "description": "<div align=\"center\">   <img src=\"./pages/src/img/besmelah.jpg\" alt=\"بسم الله الرحمن الرحیم\"> </div>",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "deno": "./mod.ts",
      "bun": "./dist/index.js",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "mod.ts"
  ],
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "build": "tsup",
    "test": "npm run test:node && npm run test:bun && npm run test:deno",
    "test:node": "tsx --test tests/adapters/node/*.test.ts src/core/**/*.test.ts",
    "test:bun": "bun test tests/adapters/bun/*.test.ts src/core/**/*.test.ts",
    "test:deno": "deno test -A tests/adapters/deno/*.test.ts src/core/**/*.test.ts",
    "bench": "npm run bench:http && npm run bench:odm",
    "bench:http": "tsx tests/benchmarks/run-http-benchmarks.ts",
    "bench:odm": "tsx tests/benchmarks/run-odm-benchmarks.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MiaadTeam/lesan.git"
  },
  "keywords": [
    "lesan",
    "framework",
    "cross-platform",
    "deno",
    "bun",
    "node",
    "api"
  ],
  "author": "MiaadTeam",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/MiaadTeam/lesan/issues"
  },
  "homepage": "https://github.com/MiaadTeam/lesan#readme",
  "devDependencies": {
    "@types/node": "^25.3.0",
    "esbuild": "^0.20.2",
    "mongodb-memory-server": "^11.0.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "mongodb": "^6.3.0",
    "superstruct": "^2.0.2"
  }
}
